<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WRExamenProgreso2.Chistes"
             Title="Chistes">
    <AbsoluteLayout>
        <Label 
            x:Name="ChisteLabel"
            Text="Presiona el botÃ³n, Cargando chiste..."
            VerticalOptions="Center"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            FontSize="Large"
            BackgroundColor="AliceBlue"
            AbsoluteLayout.LayoutBounds="0.5,0.5,0.9,0.6"
            AbsoluteLayout.LayoutFlags="All" />
        <Button
            x:Name="NewChisteBtn"
            Text="Otro chiste"
            SemanticProperties.Hint="Get another chiste"
            Clicked="NewChiste"
            AbsoluteLayout.LayoutBounds="0.5,1,0.3,50"
            AbsoluteLayout.LayoutFlags="WidthProportional,XProportional,YProportional"
            />
        <Button
            x:Name="VolverBtn"
            Text="Regresar a Main"
            SemanticProperties.Hint="Get back to Main page"
            Clicked="BackToMain"
            BackgroundColor="White"
            BorderColor="Black"
            BorderWidth="1"
            TextColor="Black"
            />
    </AbsoluteLayout>
</ContentPage>